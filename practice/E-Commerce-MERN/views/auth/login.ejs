<div class="container">

    <div class="p-5">
        <form action="/api/user/login" method="post">
            <div class="mb-3">
                <label for class="form-label">Email</label>
                <input
                    id="email"
                    class="form-control"
                    type="email"
                    name="email"
                    aria-describedby="emailHelpId"
                    placeholder="abc@mail.com" />
                <!-- <small id="emailHelpId" class="form-text text-muted">Help
                    text</small> -->
            </div>

            <div class="mb-3">
                <label for class="form-label">Password</label>
                <input
                    class="form-control"
                    id="password"
                    type="password"
                    name="password" />
            </div>

            <button class="btn border-3 bg-success" type="submit">Login</button>
        </form>
    </div>
</div>
